<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../../assets/styles/main.scss">
    <title>Регистрация</title>
</head>
<body>

<main>
    <div class="content">
        <h1 class="page-title">Регистрация</h1>
        <form class="form-content">
            {{> field/input inputType="text" inputName="email" inputPlaceholder="Почта"}}
            {{> field/input inputType="text" inputName="login" inputPlaceholder="Логин"}}
            {{> field/input inputType="text" inputName="firstname" inputPlaceholder="Имя"}}
            {{> field/input inputType="text" inputName="lastname" inputPlaceholder="Фамилия"}}
            {{> field/input inputType="password" inputName="password" inputPlaceholder="Пароль"}}
            {{> field/input inputType="password" inputName="password_repeat" inputPlaceholder="Пароль"}}
            {{> button/blue buttonLink="../main/index.hbs" buttonText="Зарегистрироваться"}}
        </form>
        <div class="form-alternative">
            <p>Уже зарегистрированы?</p>
            <a href="../signin/index.hbs">Войти</a>
        </div>
    </div>
</main>

</body>
</html>