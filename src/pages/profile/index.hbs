<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../../assets/styles/main.scss">
    <title>Регистрация</title>
</head>
<body>

<main>
    <div class="content">
        <h1 class="page-title">Профиль</h1>
        <div class="profile-avatar">
            <img src="../../assets/images/avatar.png">
            <span>Изменить аватар</span>
        </div>
        <form class="form-content">
            {{> field/input inputType="text" inputName="email" inputPlaceholder="Почта"}}
            {{> field/input inputType="text" inputName="login" inputPlaceholder="Логин"}}
            {{> field/input inputType="text" inputName="firstname" inputPlaceholder="Имя"}}
            {{> field/input inputType="text" inputName="lastname" inputPlaceholder="Фамилия"}}
            {{> field/input inputType="text" inputName="chatname" inputPlaceholder="Имя в чате"}}
            {{> field/input inputType="text" inputName="phone" inputPlaceholder="Телефон"}}
            {{> button/grey buttonLink="../main/index.hbs" buttonText="Изменить пароль"}}
            {{> button/blue buttonLink="../main/index.hbs" buttonText="Сохранить"}}
        </form>
    </div>
</main>

</body>
</html>